//Find the Maximum in an Array:
#include <iostream>

int findMax(int arr[], int n) {
    int max = arr[0];
    for (int i = 1; i < n; i++) {
        if (arr[i] > max) {
            max = arr[i];
        }
    }
    return max;
}

int main() {
    int arr[] = {3, 5, 2, 9, 5, 7, 1, 4};
    int n = sizeof(arr) / sizeof(arr[0]);
    std::cout << "Maximum element: " << findMax(arr, n) << std::endl;
    return 0;
}
