//Write a C program to calculate the factorial of a given number:
#include <stdio.h>

int main() {
    int n, i;
    unsigned long long fact = 1;
    printf("Enter an integer: ");
    scanf("%d", &n);

    if(n < 0) {
        printf("Factorial of a negative number doesn't exist.\n");
    } else {
        for(i = 1; i <= n; ++i) {
            fact *= i;
        }
        printf("Factorial of %d = %llu\n", n, fact);
    }
    return 0;
}
