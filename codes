// palindrome
def palindrome(x):
    if x < 0:
        return False
    else:
        x = str(x)
        return x == x[::-1]

# Input from the user
num = int(input("Enter a number: "))

if palindrome(num):
    print(f"{num} is a palindrome.")
else:
    print(f"{num} is not a palindrome.")
