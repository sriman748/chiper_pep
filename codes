//Check if an Array is Sorted:
#include <iostream>

bool isSorted(int arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        if (arr[i] > arr[i + 1]) {
            return false;
        }
    }
    return true;
}

int main() {
    int arr[] = {1, 2, 3, 4, 5, 6, 7, 8};
    int n = sizeof(arr) / sizeof(arr[0]);

    std::cout << "Array is sorted: " << (isSorted(arr, n) ? "Yes" : "No") << std::endl;
    return 0;
}
