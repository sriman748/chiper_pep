//Write a program in C to read 10 numbers from the keyboard and find their sum and average:
#include <stdio.h>

int main() {
    int num[10], sum = 0;
    float average;
    printf("Enter 10 numbers: ");

    for(int i = 0; i < 10; ++i) {
        scanf("%d", &num[i]);
        sum += num[i];
    }

    average = sum / 10.0;
    printf("Sum = %d, Average = %.2f\n", sum, average);
    return 0;
}
