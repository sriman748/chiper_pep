//Write a program to calculate the sum and average of 5 numbers.
#include <iostream>
using namespace std;

int main() {
    int numbers[5], sum = 0;
    float average;

    cout << "Enter 5 numbers: ";
    for (int i = 0; i < 5; i++) {
        cin >> numbers[i];
        sum += numbers[i];
    }

    average = sum / 5.0;

    cout << "Sum = " << sum << ", Average = " << average << endl;

    return 0;
}
